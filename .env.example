# ABOUTME: Example environment variables for the weather app
# ABOUTME: Copy this file to .env and fill in your actual values

# Pirate Weather API Key (Optional - for enhanced current weather data)
# Get your API key from https://pirateweather.net/
PIRATE_WEATHER_API_KEY=YOUR_API_KEY_HERE

# EPA AirNow API Key (Optional - for air quality data)
# Get your API key from https://docs.airnowapi.org/
AIRNOW_API_KEY=YOUR_API_KEY_HERE

# Legacy API keys (not currently used but supported)
OPENWEATHER_API_KEY=YOUR_API_KEY_HERE
PURPLEAIR_API_KEY=YOUR_API_KEY_HERE

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Optional: Override default port
# PORT=5001

# Optional: Configure cache settings
# CACHE_TTL=180
# CACHE_MAXSIZE=100

# Optional: Configure CORS origins for production
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
